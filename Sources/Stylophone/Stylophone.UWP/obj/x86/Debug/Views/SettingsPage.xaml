<Page x:ConnectionId='1'
    x:Class="Stylophone.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:Stylophone.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:xaml="using:Windows.UI.Xaml" xmlns:controls="using:Microsoft.UI.Xaml.Controls" xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <helper:EnumToBooleanConverter x:Key="EnumToBooleanConverter" EnumType="ElementTheme" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityConverter x:Key="ReverseBoolToVisibilityConverter" FalseValue="Visible" TrueValue="Collapsed" />
        <converters:BoolNegationConverter x:Key="BoolNegationConverter"/>
    </Page.Resources>

    <ScrollViewer Margin="{StaticResource MediumLeftRightMargin}">
        <StackPanel x:ConnectionId='2'
            x:Name="ContentArea">

            <TextBlock x:Uid="Settings_Server" Style="{ThemeResource SubtitleTextBlockStyle}" />

            <StackPanel Margin="{StaticResource SmallTopMargin}" HorizontalAlignment="Left" Width="350" >

                <TextBox x:ConnectionId='11' x:Uid="Settings_ServerHost"                                                  />

                <controls:NumberBox x:ConnectionId='12' x:Uid="Settings_ServerPort" SpinButtonPlacementMode="Compact" Margin="{StaticResource XSmallTopMargin}"
                                                                                      />

                <ProgressBar x:ConnectionId='13' Margin="{StaticResource XSmallTopMargin}" IsIndeterminate="True"
                                                                                                                                                />

                <StackPanel x:ConnectionId='14'                                                                                                                           >
                    <StackPanel x:ConnectionId='15' Orientation="Horizontal" Margin="{StaticResource XSmallTopMargin}" Spacing="4"
                                                                                                                                                   >
                        <SymbolIcon Symbol="Clear" Foreground="Red"></SymbolIcon>
                        <TextBlock x:Uid="NoServerError"/>
                    </StackPanel>

                    <StackPanel x:ConnectionId='16' Orientation="Horizontal" Margin="{StaticResource XSmallTopMargin}" Spacing="4"
                                                                                                                                            >
                        <SymbolIcon Symbol="MusicInfo" Foreground="Green" VerticalAlignment="Top"></SymbolIcon>
                        <TextBlock x:ConnectionId='17'                                                  />
                    </StackPanel>
                </StackPanel>
                

            </StackPanel>

            <TextBlock x:Uid="Settings_Database" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="{StaticResource MediumTopMargin}"/>

            <StackPanel Margin="{StaticResource XSmallTopMargin}">

                <Button x:ConnectionId='9' x:Uid="Settings_RefreshDatabase"                                                                                                       />

                <TextBlock
                    x:Uid="Settings_ClearAlbumCache"
                    Margin="{StaticResource SmallTopMargin}" Style="{ThemeResource BodyTextBlockStyle}" />

                <Button x:ConnectionId='10' x:Uid="Settings_CacheButton" Margin="{StaticResource XSmallTopMargin}"                                               />
                
            </StackPanel>

            <TextBlock x:Uid="Settings_Personalization" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="{StaticResource MediumTopMargin}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <TextBlock x:Uid="Settings_Theme" />

                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                    <RadioButton x:ConnectionId='6'
                        x:Uid="Settings_Theme_Light"
                                                                       
                                                                                                                                                             
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Light</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton x:ConnectionId='7'
                        x:Uid="Settings_Theme_Dark"
                                                                       
                                                                                                                                                            
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Dark</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton x:ConnectionId='8'
                        x:Uid="Settings_Theme_Default"
                                                                       
                                                                                                                                                               
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Default</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                </StackPanel>

                <TextBlock x:Uid="Settings_Sizing" Margin="{StaticResource XSmallTopMargin}" />

                <TextBlock x:Uid="Settings_Sizing_Info" Style="{StaticResource CaptionTextBlockStyle}" />
                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                    <RadioButton x:ConnectionId='4'
                        x:Uid="Settings_Sizing_Normal"
                        CommandParameter="False"
                                                                        
                                                                                                                                     
                        FontSize="15"
                        GroupName="AppSizing"/>
                    <RadioButton x:ConnectionId='5'
                        x:Uid="Settings_Sizing_Compact"
                        CommandParameter="True"
                                                                        
                                                                                   
                        FontSize="15"
                        GroupName="AppSizing"/>
                </StackPanel>
                
            </StackPanel>

          
            <TextBlock x:Uid="Settings_About" Style="{ThemeResource SubtitleTextBlockStyle}" />

            <StackPanel Margin="{StaticResource SmallTopMargin}" >
                <StackPanel Orientation="Horizontal">
                    <Image Margin="0,-12"
                        Width="64"
                        Height="64"
                        Source="ms-appx:///Assets/Square44x44Logo.png" />
                
                    <StackPanel>
                        <TextBlock x:ConnectionId='3' Style="{ThemeResource BodyTextBlockStyle}"                                                           />
                        <TextBlock
                        x:Uid="Settings_AboutDescription"
                        Margin="{StaticResource XSmallTopMargin}"
                        Style="{ThemeResource BodyTextBlockStyle}" />
                    </StackPanel>
                </StackPanel>

                <HyperlinkButton x:Uid="Settings_PrivacyTermsLink" Margin="{StaticResource XSmallTopMargin}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>    
</Page>

