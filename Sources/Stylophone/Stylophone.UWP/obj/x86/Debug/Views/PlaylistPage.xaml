<Page x:ConnectionId='1'
    x:Class="Stylophone.Views.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:Stylophone="using:Stylophone.Helpers"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:behaviors="using:Stylophone.Behaviors" xmlns:items="using:Stylophone.ViewModels.Items"
    Style="{StaticResource PageStyle}"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Minimal"
    mc:Ignorable="d">

    <Page.Resources>
        <Stylophone:SecondsToTimeConverter x:Key="SecondsToTimeConverter" />
        <Stylophone:DoubleTopThicknessConverter x:Key="DoubleTopThicknessConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityConverter TrueValue="Collapsed" FalseValue="Visible" x:Key="ReverseBoolToVisibilityConverter" />
        
        <DataTemplate x:Key="TrackListViewTemplate"                                  >
            <Grid x:ConnectionId='3'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='8' Grid.Column="0"                                                            
                    VerticalAlignment="Center" MaxLines="1" TextTrimming="CharacterEllipsis" Style="{ThemeResource BaseTextBlockStyle}"/>
                </Grid>

                <TextBlock x:ConnectionId='4' Grid.Column="1"
                                               
                    VerticalAlignment="Center"
                                                                 
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>

                <HyperlinkButton x:ConnectionId='5' Grid.Column="2"                                                                     
                                 Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}">
                    <TextBlock x:ConnectionId='7'                           
                    VerticalAlignment="Center"
                                                                
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>
                </HyperlinkButton>
                
                <TextBlock x:ConnectionId='6' Grid.Column="3"
                                                                                                             
                                                                                                                               
                    VerticalAlignment="Center"
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='9' x:Name="ContentArea">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--641 is the default CompactModeThresholdWidth in NavigationView -->
                        <AdaptiveTrigger MinWindowWidth="641" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="propertiesGroup1.(RelativePanel.RightOf)" Value="itemHero" />
                        <Setter Target="propertiesGroup1.(RelativePanel.Below)" Value="info" />
                        <Setter Target="propertiesGroup1.Width" Value="400" />
                        <Setter Target="title.Style" Value="{ThemeResource SubheaderTextBlockStyle}"/>
                        <Setter Target="artist.Style" Value="{ThemeResource SubtitleTextBlockStyle}"/>
                        <Setter Target="Header.Margin" Value="0,0,0,0"/>
                        <Setter Target="Header.Padding" Value="24,46,24,36" />
                        <Setter Target="QueueList.Margin" Value="0,0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Stylophone:AlternatingRowListView x:ConnectionId='10' SelectionMode="Single" 
                      x:Name="QueueList" Margin="0,-96"
                      AllowDrop="True"
                      CanReorderItems="True"
                      ReorderMode="Enabled"
                                                
                      extensions:ScrollViewerExtensions.VerticalScrollBarMargin="{Binding ActualHeight, ElementName=Header, Converter={StaticResource DoubleTopThicknessConverter}}"
                      extensions:ScrollViewerExtensions.EnableMiddleClickScrolling="True"
                      OddRowBackground="{ThemeResource SystemControlPageBackgroundListLowBrush}"
                      EvenRowBackground="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                      ItemTemplate="{StaticResource TrackListViewTemplate}"
                                                             >
            <Stylophone:AlternatingRowListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="{StaticResource MediumLeftRightMargin}" />
                    <Setter Property="ContextFlyout">
                        <Setter.Value>
                            <MenuFlyout x:ConnectionId='12'                             >
                                <MenuFlyoutItem x:Uid="AddToQueueFlyoutItem" Icon="Add" Command="{Binding AddToQueueCommand}" CommandParameter="{Binding File}" DataContext="{Binding}"/>
                                <MenuFlyoutItem x:ConnectionId='13' x:Uid="RemoveFromPlaylistFlyoutItem"  Icon="Remove"                                                             CommandParameter="{Binding}" DataContext="{Binding}"/>
                                <MenuFlyoutItem x:Uid="ViewAlbumFlyoutItem" Command="{Binding ViewAlbumCommand}" CommandParameter="{Binding File}" DataContext="{Binding}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE93C;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Stylophone:AlternatingRowListView.ItemContainerStyle>

            <Stylophone:AlternatingRowListView.Header>
                <controls:ScrollHeader Mode="Sticky">
                    <!-- https://github.com/windows-toolkit/WindowsCommunityToolkit/issues/3415 -->

                    <RelativePanel x:ConnectionId='14' RequestedTheme="Dark" Padding="24,128,24,36" x:Name="Header">

                        <Border RelativePanel.AlignTopWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignBottomWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            Margin="-24,-78,-24,-24"
                            Canvas.ZIndex="-1">
                            <Border.Background>
                                <AcrylicBrush BackgroundSource="Backdrop" TintOpacity="0.6" FallbackColor="{ThemeResource SystemAccentColorDark1}"
                                              TintColor="{ThemeResource SystemAccentColorDark1}"></AcrylicBrush>
                            </Border.Background>
                        </Border>

                        <Border RelativePanel.AlignTopWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignBottomWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True"
                            Margin="-24"
                            Canvas.ZIndex="-2">
                            <Border.Background>
                                <ImageBrush x:ConnectionId='26'                                                           Stretch="UniformToFill"></ImageBrush>
                            </Border.Background>
                        </Border>

                        <controls:DropShadowPanel x:ConnectionId='15' x:Name="itemHero" 
                        Width="200" 
                        Height="200"
                        RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True"
                        Margin="{StaticResource SmallRightMargin}"
                        Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                        BlurRadius="10"
                        OffsetY="2"
                        ShadowOpacity="0.6"
                        Color="Black">

                            <Grid Width="150" Height="150" Margin="0,-50,0,0">
                                <controls:ImageEx x:ConnectionId='25'  CornerRadius="3" BorderThickness="2" 
	                                            PlaceholderSource="/Assets/AlbumPlaceholder.png" PlaceholderStretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"
	                                                                                                  Stretch="UniformToFill" />
                            </Grid>

                        </controls:DropShadowPanel>

                        <controls:DropShadowPanel RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True"
                        Margin="20,20,0,0"
                        Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                        BlurRadius="10"
                        OffsetY="3"
                        ShadowOpacity="0.6"
                        Color="Black">

                            <Grid Width="150" Height="150">
                                <controls:ImageEx x:ConnectionId='24'  CornerRadius="3" BorderThickness="2" 
	                                            PlaceholderSource="/Assets/AlbumPlaceholder.png" PlaceholderStretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"
	                                                                                                  Stretch="UniformToFill" />
                            </Grid>

                        </controls:DropShadowPanel>

                        <controls:DropShadowPanel RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True"
                        Margin="40,40,0,0"
                        Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                        BlurRadius="10"
                        OffsetY="4"
                        ShadowOpacity="0.6"
                        Color="Black">

                            <Grid Width="150" Height="150">
                                <controls:ImageEx x:ConnectionId='23'  CornerRadius="3" BorderThickness="2"
	                                            PlaceholderSource="/Assets/AlbumPlaceholder.png" PlaceholderStretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"
	                                                                                                 Stretch="UniformToFill" />
                            </Grid>

                        </controls:DropShadowPanel>

                        <TextBlock x:ConnectionId='16'
                        x:Name="title"
                        Margin="{StaticResource XXSmallTopMargin}"
                        RelativePanel.AlignTopWithPanel="True"
                        RelativePanel.RightOf="itemHero"
                        Style="{ThemeResource TitleTextBlockStyle}"
                        MaxLines="2" TextTrimming="CharacterEllipsis"
                                                                                     
                                                                    />

                        <TextBlock x:ConnectionId='17' x:Name="artist" RelativePanel.RightOf="itemHero" RelativePanel.Below="title" MaxLines="2" TextTrimming="CharacterEllipsis"
                                                                                               
                               Style="{StaticResource SubtitleTextBlockStyle}"                                                />

                        <TextBlock x:ConnectionId='18' x:Name="info"  RelativePanel.RightOf="itemHero" RelativePanel.Below="artist" Margin="{StaticResource SmallTopMargin}"
                                   Style="{ThemeResource BaseTextBlockStyle}" FontSize="16"                                                     />

                        <StackPanel x:ConnectionId='19' x:Name="propertiesGroup1" Margin="{StaticResource SmallTopMargin}"
                                RelativePanel.Below="itemHero" Orientation="Horizontal" Spacing="10">

                            <Button x:ConnectionId='20' Style="{StaticResource ButtonRevealStyle}"                                                  Width="108" VerticalAlignment="Stretch">
                                <StackPanel>
                                    <SymbolIcon Symbol="Play" />
                                    <TextBlock x:Uid="PlayTextBlock" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:ConnectionId='21' x:Name="AddToQButton" Style="{StaticResource ButtonRevealStyle}"                                                 Width="108" VerticalAlignment="Stretch">
                                <StackPanel >
                                    <SymbolIcon Symbol="Add" />
                                    <TextBlock x:Uid="AddToQueueTextBlock" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button x:ConnectionId='22' Style="{StaticResource ButtonRevealStyle}"                                                    Width="108" VerticalAlignment="Stretch">
                                <StackPanel >
                                    <SymbolIcon Symbol="Delete" />
                                    <TextBlock x:Uid="DeletePlaylistTextBlock" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </RelativePanel>
                </controls:ScrollHeader>
            </Stylophone:AlternatingRowListView.Header>

            <Stylophone:AlternatingRowListView.Footer>
                <Grid Height="12"/>
            </Stylophone:AlternatingRowListView.Footer>
        </Stylophone:AlternatingRowListView>

        <StackPanel x:ConnectionId='11' HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding ActualHeight, ElementName=Header, Converter={StaticResource DoubleTopThicknessConverter}}"
                                                                                                                                    >
            <SymbolIcon Symbol="Preview" RenderTransformOrigin="0.5,0.5" Height="86">
                <SymbolIcon.RenderTransform>
                    <CompositeTransform ScaleX="5" ScaleY="5"/>
                </SymbolIcon.RenderTransform>
            </SymbolIcon>
            <TextBlock x:Uid="EmptyPlaylistTitle" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Margin="{StaticResource SmallTopMargin}"/>
            <TextBlock x:Uid="EmptyPlaylistDesc" HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Page>

