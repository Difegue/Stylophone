<mvx:MvxWindowsPage
    x:Class="Stylophone.Views.SearchResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:Stylophone="using:Stylophone.Helpers"
    xmlns:vm="using:Stylophone.Common.ViewModels"
    Style="{StaticResource PageStyle}"
    xmlns:mvx="using:MvvmCross.Platforms.Uap.Views"
    mc:Ignorable="d">

    <mvx:MvxWindowsPage.Resources>
        <Stylophone:SecondsToTimeConverter x:Key="SecondsToTimeConverter" />
        <Stylophone:DoubleToThicknessConverter x:Key="DoubleToThicknessConverter" />
        <converters:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityConverter TrueValue="Collapsed" FalseValue="Visible" x:Key="ReverseBoolToVisibilityConverter" />

        <DataTemplate x:Key="TrackListViewTemplate" x:DataType="vm:TrackViewModel">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{x:Bind Name}" ToolTipService.ToolTip="{x:Bind Name}"
                    VerticalAlignment="Center" MaxLines="1" TextTrimming="CharacterEllipsis" Style="{ThemeResource BaseTextBlockStyle}"/>
                </Grid>

                <TextBlock Grid.Column="1"
                    Text="{x:Bind File.Artist}"
                    VerticalAlignment="Center"
                    ToolTipService.ToolTip="{x:Bind File.Artist}"
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>

                <HyperlinkButton Grid.Column="2" Command="{x:Bind ViewAlbumCommand}" CommandParameter="{x:Bind File}"
                                 Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}">
                    <TextBlock Text="{x:Bind File.Album}"
                    VerticalAlignment="Center"
                    ToolTipService.ToolTip="{x:Bind File.Album}"
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>
                </HyperlinkButton>
                
                <TextBlock Grid.Column="3"
                    Text="{x:Bind File.Time, Converter={StaticResource SecondsToTimeConverter}, Mode=OneWay}"
                    ToolTipService.ToolTip="{x:Bind File.Time, Converter={StaticResource SecondsToTimeConverter}, Mode=OneWay}"
                    VerticalAlignment="Center"
                    MaxLines="1"
                    TextTrimming="CharacterEllipsis"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,0,0"/>
            </Grid>
        </DataTemplate>
    </mvx:MvxWindowsPage.Resources>

    <Grid x:Name="ContentArea">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="16">
            <ToggleButton x:Uid="SearchTracksToggle" IsChecked="{x:Bind Vm.SearchTracks, Mode=TwoWay}" Width="120"/>
            <ToggleButton x:Uid="SearchArtistsToggle" IsChecked="{x:Bind Vm.SearchArtists, Mode=TwoWay}" Width="120"/>
            <ToggleButton x:Uid="SearchAlbumsToggle" IsChecked="{x:Bind Vm.SearchAlbums, Mode=TwoWay}" Width="120"/>
        </StackPanel>
        
        <Stylophone:AlternatingRowListView x:Name="QueueList"
                      SelectionMode="Extended"
                      Margin="0,42,0,0"
                      DoubleTapped="Queue_Track"
                      RightTapped="Select_Item"
                      ui:ScrollViewerExtensions.EnableMiddleClickScrolling="True"
                      ui:ScrollViewerExtensions.VerticalScrollBarMargin="{Binding ActualHeight, ElementName=Header, Converter={StaticResource DoubleToThicknessConverter}}"
                      OddRowBackground="{ThemeResource SystemControlPageBackgroundListLowBrush}"
                      EvenRowBackground="Transparent"
                      ItemTemplate="{StaticResource TrackListViewTemplate}"
                      ItemsSource="{x:Bind Vm.Source}">
            <Stylophone:AlternatingRowListView.ContextFlyout>
                <MenuFlyout>
                    <!-- Add to Queue -->
                    <MenuFlyoutItem x:Uid="AddToQueueFlyoutItem" Icon="Add"
                                    Command="{x:Bind Vm.AddToQueueCommand}"
                                    CommandParameter="{x:Bind QueueList.SelectedItems, Mode=OneWay}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Enter" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <!-- Add to Playlist -->
                    <MenuFlyoutItem x:Uid="AddToPlaylistFlyoutItem" Icon="MusicInfo"
                                    Command="{x:Bind Vm.AddToPlayListCommand}"
                                    CommandParameter="{x:Bind QueueList.SelectedItems, Mode=OneWay}"/>
                    <!-- View Track Album -->
                    <MenuFlyoutItem x:Uid="ViewAlbumFlyoutItem"
                                    Command="{x:Bind Vm.ViewAlbumCommand}"
                                    CommandParameter="{x:Bind QueueList.SelectedItems, Mode=OneWay}">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE93C;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </Stylophone:AlternatingRowListView.ContextFlyout>

            <Stylophone:AlternatingRowListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="{StaticResource MediumLeftRightMargin}" />
                </Style>
            </Stylophone:AlternatingRowListView.ItemContainerStyle>

            <Stylophone:AlternatingRowListView.Footer>
                <Grid Height="12"/>
            </Stylophone:AlternatingRowListView.Footer>
            
        </Stylophone:AlternatingRowListView>


        <winui:ProgressRing Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsActive="{x:Bind Vm.IsSearchInProgress, Mode=OneWay}" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{Binding ActualHeight, ElementName=Header, Converter={StaticResource DoubleToThicknessConverter}}"
                    Visibility="{x:Bind Vm.IsSourceEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <SymbolIcon Symbol="Zoom" RenderTransformOrigin="0.5,0.5" Height="86">
                <SymbolIcon.RenderTransform>
                    <CompositeTransform ScaleX="5" ScaleY="5"/>
                </SymbolIcon.RenderTransform>
            </SymbolIcon>
            <TextBlock x:Uid="SearchNoResultsTitle" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Margin="{StaticResource SmallTopMargin}"/>
            <TextBlock x:Uid="EmptyPlaylistDesc" HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</mvx:MvxWindowsPage>
